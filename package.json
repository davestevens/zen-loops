{
  "name": "zen-loops",
  "version": "0.1.2",
  "description": "Implementation of 'Loops of Zen'.",
  "scripts": {
    "start": "webpack-dev-server --inline --hot --content-base build",
    "test": "mocha --recursive --compilers js:babel-core/register",
    "build": "NODE_ENV=production webpack -p --config webpack.config.prod.js",
    "commit-bundle": "if [[ -n $(git status build --porcelain) ]]; then git add -A build && git commit -m 'Includes bundle.'; fi",
    "preversion": "npm run build && npm run commit-bundle",
    "deploy": "gh-pages -d build"
  },
  "author": "Dave Stevens <dave@dstvns.co.uk>",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.26.1",
    "eslint": "^3.13.1",
    "eslint-config-defaults": "^9.0.0",
    "gh-pages": "^0.12.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.3.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "sass-loader": "^4.1.1",
    "seedrandom": "^2.4.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.15.0"
  }
}
